# UniFi Documenter Configuration Examples

# Basic single controller configuration
UNIFI_CONTROLLER_IP=192.168.1.1
UNIFI_API_KEY=your-api-key-here

# Alternative: Username/password authentication
# UNIFI_USERNAME=admin
# UNIFI_PASSWORD=your-password

# Service configuration
UNIFI_TIMEZONE=America/New_York
UNIFI_SCHEDULE_TIME=02:00
UNIFI_OUTPUT_DIR=/output
UNIFI_OUTPUT_FORMAT=markdown

# Advanced: Multiple controllers (JSON format)
# UNIFI_CONTROLLERS=[{"name":"main","host":"192.168.1.1","api_key":"key1"},{"name":"remote","host":"10.0.0.1","username":"admin","password":"pass"}]

# Feature toggles (all enabled by default)
UNIFI_INCLUDE_NETWORKS=true
UNIFI_INCLUDE_WIFI_NETWORKS=true
UNIFI_INCLUDE_DEVICES=true
UNIFI_INCLUDE_CLIENTS=true
UNIFI_INCLUDE_FIREWALL_RULES=true
UNIFI_INCLUDE_NAT_RULES=true
UNIFI_INCLUDE_SETTINGS=true
UNIFI_INCLUDE_IP_ADDRESSING=true

# Logging
UNIFI_VERBOSE=false